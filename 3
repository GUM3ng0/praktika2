#include <iostream>
using namespace std;
int main()
{
	setlocale(0, "");
	int size;
	cout << "Введите размер домика: ";
	 cin >> size;

	// Рисуем верх домика
	for (int i = 0; i < size; ++i)
	{
		for (int j = 0; j < size - i - 1; ++j) 
		{
			cout << " ";
		}
		for (int j = 0; j < 2 * i + 1; ++j) 
		{
		cout << "*";
		}
		cout << endl;
	}

	// Рисуем основание домика
	for (int i = 0; i < size; ++i) 
	{
		for (int j = 0; j < size - 1; ++j) 
		{
			cout << " ";
		}
		cout << "***" << endl;
	}

	return 0;
	
}
